{
  "name": "Haskell",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "haskell.manageHLS": "GHCup"
      },
      "extensions": [
        "haskell.haskell"
      ]
    }
  },
  "remoteUser": "vscode",
  "features": {
    "desktop-lite": {
      "password": "vscode",
      "webPort": "6080",
      "vncPort": "5901"
    }
  }
}